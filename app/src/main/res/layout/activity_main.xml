<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Space
        android:id="@+id/Space"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Str1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.038"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/End1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.951"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/End1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.961"
        />
    <View
        android:id="@+id/logo"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_logo"
        app:layout_constraintTop_toBottomOf="@id/Space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="33dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ToDoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toStartOf="@+id/End1_1"
        app:layout_constraintStart_toStartOf="@+id/Str1"
        app:layout_constraintTop_toBottomOf="@id/logo" />
    <View
        android:id="@+id/WhiteBack"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.268"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/add_button"
        android:fontFamily="@font/karla"
        android:text="@string/add_to_list"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/End1"
        app:layout_constraintHeight_percent="0.055"
        app:layout_constraintStart_toStartOf="@+id/Str1"

        />
     <EditText
         android:id="@+id/WhatToDo"
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:textSize="13sp"
         android:fontFamily="@font/karla"
         android:textColor="@color/input_color"
         android:text="@string/enter_to_do"
         android:paddingStart="14dp"
         app:layout_constraintHeight_percent="0.055"
         app:layout_constraintBottom_toTopOf="@+id/Button"
         app:layout_constraintStart_toStartOf="@+id/Str1"
         app:layout_constraintEnd_toEndOf="@+id/End1"
         android:layout_marginBottom="33dp"
         android:background="@drawable/konturi"
         />
    <TextView
        android:id="@+id/ToDO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/Str1"
        app:layout_constraintBottom_toTopOf="@id/WhatToDo"
        android:fontFamily="@font/karla"
        android:textStyle="bold"
        android:text="@string/enter_do"
        android:textSize="15sp"
        android:textColor="#001533"
        android:layout_marginBottom="15dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>