<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/ToDoJob"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="15sp"
        android:paddingBottom="22dp"
        android:paddingTop="22dp"
        android:paddingStart="31dp"
        android:background="@drawable/konturi"
        android:textColor="@color/text_color"
        app:layout_constraintDimensionRatio="5.727"
        app:layout_constraintWidth_percent="0.913"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:id="@+id/False"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/wre_red"
        app:layout_constraintWidth_percent="0.065"
        app:layout_constraintDimensionRatio="1.08"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintTop_toTopOf="@+id/ToDoJob"
        app:layout_constraintEnd_toEndOf="@+id/ToDoJob"/>
    <View
        android:id="@+id/True"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/wre_green"
        android:visibility="invisible"
        android:clickable="true"
        app:layout_constraintWidth_percent="0.065"
        app:layout_constraintDimensionRatio="1.08"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintTop_toTopOf="@+id/ToDoJob"
        app:layout_constraintEnd_toEndOf="@+id/ToDoJob"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>